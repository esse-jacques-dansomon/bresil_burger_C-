<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="keywords" content="#">
    <meta name="description" content="#">
    <title>Creer un compte | Bresil burger </title>
    {% include('frontend/includes/link.html.twig') %}
</head>

<body>
    <div class="inner-wrapper">
        <div class="container-fluid no-padding">
            <div class="row no-gutters overflow-auto">
                <div class="col-md-6">
                    <div class="main-banner">
                        <img src="{{ asset('assets/img/image-cover.jpg') }}" class="img-fluid full-width main-img" alt="banner">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="section-2 user-page main-padding">
                        <div class="login-sec">
                            <div class="login-box mt-4">
                                {% for flashError in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}
                                {{ form_start(registrationForm) }}
                                <h4 class="text-light-black fw-600">Create your account</h4>
                                <div class="row">
                                    <div class="col-lg-6 col-md-12 col-sm-6">
                                        <div class="form-group">
                                            {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control
                                            form-control-submit', 'placeholder': 'First Name'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-6">
                                        <div class="form-group">
                                            {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control
                                            form-control-submit', 'placeholder': 'Last Name'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control
                                            form-control-submit', 'placeholder': 'Email'}}) }}
                                        </div>
                                        <div class="form-group">
                                            <label class="text-light-white fs-14">Password (8 character minimum)</label>
                                            {{ form_widget(registrationForm.plainPassword,
                                                { 'id':'password-field','attr': {'class': 'form-control form-control-submit',
                                                    'placeholder': 'Password'}}) }}
                                            <div data-name="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn-second-2 btn-submit full-width">Create your account</button>
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="btn-second-2 btn-facebook full-width">
                                                <img src="/assets/img/facebook-logo.svg" alt="btn logo">Or Continue with Facebook</button>
                                        </div>
                                        <div class="form-group">
                                            {#                                           #}
                                            <a href=" {{ path('connect_google') }}" class="btn-second-2 btn-google full-width">
                                                <img src="/assets/img/google-logo.png" alt="btn logo">Or Continue with Google
                                            </a>
                                        </div>
                                        <div class="form-group text-center">
                                            <p class="text-light-black mb-0">Have an account? <a href="{{ path('app_login') }}">Sign in</a>
                                            </p>
{#                                        </div> <span class="text-light-black fs-12 terms">By creating your account, you agree to the <a href="#"> Terms of Use </a> and <a href="#"> Privacy Policy.</a></span>#}
                                    </div>
                                </div>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</div>
{% include('frontend/includes/script.html.twig') %}
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v11.0&appId=375096090773730&autoLogAppEvents=1" nonce="32brFHJy"></script>

</body>

</html>
