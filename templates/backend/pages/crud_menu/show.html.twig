{% extends 'backend/backendbase.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h3>Menu</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                                <td> <img src="{{ menu.image }}" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="" height="150" width="100"></td>
            </tr>
            <tr>
                <th>Price</th>
                <td>FCFA {{ menu.price|number_format(2) }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ menu.createdAt ? menu.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ menu.updatedAt ? menu.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ menu.slug }}</td>
            </tr>
            <tr>
                <th>IsOfferOfDay</th>
                <td>{{ menu.isOfferOfDay ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ menu.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crud_menu_index') }}">back to list</a>

    <a href="{{ path('crud_menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('backend/pages/crud_menu/_delete_form.html.twig') }}
{% endblock %}
