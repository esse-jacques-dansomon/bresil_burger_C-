{% extends 'backend/backendbase.html.twig' %}

{% block title %}Menu index{% endblock %}

{% block body %}
    <h3fa-rotate-270>Menu index</h3fa-rotate-270>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Slug</th>
                <th>IsOfferOfDay</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.id }}</td>
                <td>{{ menu.name }}</td>
                <td> <img src="{{ menu.image }}" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="" height="150" width="100"></td>
                <td>FCFA {{ menu.price|number_format(2) }}</td>
                <td>{{ menu.createdAt ? menu.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ menu.updatedAt ? menu.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ menu.slug }}</td>
                <td>{{ menu.isOfferOfDay ? 'Yes' : 'No' }}</td>
                <td>{{ menu.description }}</td>
                <td>
                    <a href="{{ path('crud_menu_show', {'id': menu.id}) }}">show</a>
                    <a href="{{ path('crud_menu_edit', {'id': menu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crud_menu_new') }}">Create new</a>
{% endblock %}
