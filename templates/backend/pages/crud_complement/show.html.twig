{% extends 'backend/backendbase.html.twig' %}

{% block title %}Complement{% endblock %}

{% block body %}
    <h3>Complement</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ complement.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ complement.name }}</td>
            </tr>           
             <tr>
                <th>Category</th>
                <td>{{ complement.Category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> <img src="{{ complement.image }}" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="" height="150" width="100"></td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ complement.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ complement.createdAt ? complement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ complement.updatedAt ? complement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ complement.slug }}</td>
            </tr>
            <tr>
                <th>IsOfferOfDay</th>
                <td>{{ complement.isOfferOfDay ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crud_complement_index') }}">back to list</a>

    <a href="{{ path('crud_complement_edit', {'id': complement.id}) }}">edit</a>

    {{ include('backend/pages/crud_complement/_delete_form.html.twig') }}
{% endblock %}
