{% extends 'backend/backendbase.html.twig' %}

{% block title %}Burger{% endblock %}

{% block body %}
    <h3>Burger</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ burger.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ burger.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> <img src="{{ burger.image }}"  class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="" height="120px" width="100px"></td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ burger.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ burger.createdAt ? burger.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ burger.updatedAt ? burger.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ burger.slug }}</td>
            </tr>
            <tr>
                <th>IsOfferOfDay</th>
                <td>{{ burger.isOfferOfDay ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ burger.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crud_burger_index') }}">back to list</a>

    <a href="{{ path('crud_burger_edit', {'id': burger.id}) }}">edit</a>

    {{ include('backend/pages/crud_burger/_delete_form.html.twig') }}
{% endblock %}
