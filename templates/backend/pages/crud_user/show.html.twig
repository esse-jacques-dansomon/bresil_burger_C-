{% extends 'backend/backendbase.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>GoogleId</th>
                <td>{{ user.googleId }}</td>
            </tr>
            <tr>
                <th>FacebookId</th>
                <td>{{ user.facebookId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crud_user_index') }}">back to list</a>

    <a href="{{ path('crud_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('backend/pages/crud_user/_delete_form.html.twig') }}
{% endblock %}
