{% extends 'backend/backendbase.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <!-- page content -->

            <div class="page-title">
                <div class="title_left">
                    <h3>Utilisateurs <small></small></h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row" style="display: block;">

                <div class="clearfix"></div>

                <div class="col-md-12 col-sm-12  ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Lister des  <small>utilisateurs</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </div>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>

                        <div class="x_content">


                            <div class="table-responsive">
                                <table class="table table-striped jambo_table bulk_action">
                                    <thead>
                                    <tr class="headings">
                                        <th>
                                            <input type="checkbox" id="check-all" class="flat">
                                        </th>
                                        <th class="column-title">No </th>
                                        <th class="column-title">Login </th>
                                        <th class="column-title">Nom </th>
                                        <th class="column-title">Prenom </th>
                                        <th class="column-title">Cr√©e le </th>
                                        <th class="column-title">Role </th>
                                        <th class="column-title no-link last"><span class="nobr">Action</span>
                                        </th>
                                        <th class="column-title no-link last"><span class="nobr">Delete</span>
                                        </th>
                                        <th class="bulk-actions" colspan="12">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for key, user in users %}
                                    <tr class="even pointer">
                                        <td class="a-center ">
                                            <input type="checkbox" class="flat" name="table_records">
                                        </td>
                                        <td class=" ">{{ key }}</td>

                                        <td class=" ">{{ user.email }}</td>
                                        <td class=" ">{{ user.firstname }}</td>
                                        <td class=" ">{{ user.lastname }} </td>
                                        <td class=" ">{{ user.createdAt|date('Y-M-d') }}</td>
                                        <td class="a-right a-right ">{{ user.roles[1] }}</td>
                                        <td class="last">
                                            <p>
                                                <a href="{{ path('crud_user_show', {'id': user.id }) }}">View</a>
                                                <a href="{{ path('crud_user_edit', {'id': user.id }) }}">Edit</a>
                                            </p>

                                        </td>
                                        <td>
                                            {% include('backend/pages/crud_user/_delete_form.html.twig') %}

                                        </td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>


                        </div>
                    </div>
                </div>
            </div>

    <!-- /page content -->
{% endblock %}
